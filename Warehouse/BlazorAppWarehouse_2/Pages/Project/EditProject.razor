@page "/Projects/{ID}"
@inject IProjectService ProjectService
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control" @bind-value="@project.Name" />            
                <input type="hidden" @bind-value="@project.Id" />
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" @onclick="() => UpdateBookCase()">Save</button>
                <button type="button" class="btn btn-danger" @onclick="() => cancel()">Cancel</button>
            </div>
        </form>
    </div>
</div>

@code  {

    [Parameter]
    public string ID { get; set; }

    Project project = new Project();

    protected override async Task OnInitializedAsync()
    {
        project = await ProjectService.GetProjectById(Convert.ToInt32(ID));
    }

    protected async Task UpdateBookCase()
    {
        await ProjectService.UpdateProject(project);
        navigationManager.NavigateTo("/Projects");
    }

    void cancel()
    {
        navigationManager.NavigateTo("/Projects");
    }
}
